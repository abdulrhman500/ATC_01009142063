{
  "name": "eventora-backend",
  "version": "1.0.0",
  "main": "main.ts",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/src/bootstrap.js",
    "test": "jest test/integration --forceExit --detectOpenHandles",
    "test:watch": "jest test/integration --watch",

    "compose:up": "docker compose up --build -d",
    
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:db:push": "prisma db push", 

    "dev:migrate": "npm run prisma:migrate:dev && npm run dev",
    "start:migrate": "npm run prisma:migrate:dev && npm run start",
    "build:and:start:prod:migrate": "npm run build && npm run prisma:migrate:deploy && npm run start:prod"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.26.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/reflect-metadata": "^0.0.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.7.0",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.1.1",
    "testcontainers": "^10.26.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.2.2",
    "inversify-express-utils": "^6.5.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "_moduleAliases": {
    "@src": "dist/src",
    "@test": "dist/test",
    "@api": "dist/src/api",
    "@application": "dist/src/application",
    "@domain": "dist/src/domain",
    "@value-objects": "dist/src/domain/models/value-objects",
    "@shared": "dist/src/shared",
    "@exceptions": "dist/src/shared/exceptions",
    "@infrastructure": "dist/src/infrastructure",
    "@controllers": "dist/src/api/controllers",
    "@config": "dist/src/config"
  }
}
